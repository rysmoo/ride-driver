<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profilelayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_180adp"
    android:background="@color/cabme_app_yellow"
    android:paddingTop="@dimen/_20adp"
    android:paddingBottom="@dimen/_20adp"
    android:orientation="horizontal"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_20adp"
        android:layout_marginStart="@dimen/_20adp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="@dimen/_100adp"
            android:layout_height="@dimen/_100adp"
            android:elevation="0dp"
            android:layout_marginEnd="@dimen/_10adp"
            app:cardCornerRadius="@dimen/_30adp"
            >

            <ImageView
                android:id="@+id/ivDriverImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                />
        </androidx.cardview.widget.CardView>

        <com.rideke.driver.common.custompalette.FontTextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15adp"
            android:layout_toEndOf="@+id/card_view"
            android:ellipsize="end"
            android:maxLines="3"
            android:paddingStart="@dimen/_10adp"
            android:paddingEnd="@dimen/_16adp"
            android:layout_marginBottom="@dimen/_10adp"
            android:text="@string/hello"
            android:gravity="start"
            android:textColor="@color/primary_button_text_color"
            android:textSize="@dimen/_16asp"
            app:fontname="@string/font_Medium"
            />


        <com.rideke.driver.common.custompalette.FontTextView
            android:id="@+id/ivDriverName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/card_view"
            android:ellipsize="end"
            android:maxLines="3"
            android:paddingStart="@dimen/_10adp"
            android:paddingTop="@dimen/_10adp"
            android:paddingEnd="@dimen/_16adp"
            android:textAlignment="viewStart"
            android:textColor="@color/white"
            android:textSize="@dimen/_16asp"
            app:fontname="@string/font_Medium" />

    </RelativeLayout>
</LinearLayout>
